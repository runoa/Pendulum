<Page
    x:Class="Pendulum.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pendulum"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,9,4" Width="1500" Height="1000">
        <ListView x:Name="time_list_view" HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="200" FontFamily="Segoe UI" Margin="20,20,20,20"/>
        <ListView x:Name="detail_list_view" HorizontalAlignment="Left" Height="960" Margin="240,20,0,1" VerticalAlignment="Top" Width="1240"/>
        <Button x:Name="reset_button" Content="リセット" HorizontalAlignment="Left" Margin="20,540,0,0" VerticalAlignment="Top" FontFamily="Segoe UI" Width="200" Height="48" Click="reset_button_Click"/>

    </Grid>
</Page>
